

<h3 class="finalsTitle">Knockout Stage</h3>
<div class="divider"></div>

<div class="finals roundof16">
	<div class="title">
		<h4>Round of 16</h4>
	</div>
	<div class="matches">
		{{#each roundOf16}}
			<div class="match">
				{{#each this.teams}}
					<div class="team finals{{this.winRoundOf16}} team{{@index}}">
						<img class="countryFlag" src="{{ ../../img_path }}flags/{{this.flagImage}}"/>
						<div class="teamInfo">
							<div class="teamName">{{this.teamName}}</div>
							<div class="{{this.winner}}"></div>
							<div class="clearboth"></div>
							<div class="teamPot">{{this.groupStatus}}</div>
						</div>
						<div class="clearboth"></div>
					</div>
					<div class="teamSeparator{{@index}}"></div>
				{{/each}}
			</div>

		{{/each}}
		<div class="clearboth"></div>
	</div>
</div>

<div class="finals quarterfinals">
	<div class="title">
		<h4>Quarter-finals</h4>
	</div>
	<div class="matches">
		{{#each quarterFinals}}
			<div class="match">
				{{#each this.teams}}
					<div class="team finals{{this.winQuarterFinal}} team{{@index}}">
						<img class="countryFlag" src="{{ ../../img_path }}flags/{{this.flagImage}}"/>
						<div class="teamInfo">
							<div class="teamName">{{this.teamName}}</div>
							<div class="{{this.winner}}"></div>
							<div class="clearboth"></div>
							<div class="teamPot">{{this.roundOf16Status}}</div>
						</div>
						<div class="clearboth"></div>
					</div>
					<div class="teamSeparator{{@index}}"></div>
				{{/each}}
			</div>

		{{/each}}
		<div class="clearboth"></div>
	</div>
</div>

<div class="finals semifinals">
	<div class="title">
		<h4>Semi-finals</h4>
	</div>
	<div class="matches">
		{{#each semiFinals}}
			<div class="match">
				{{#each this.teams}}
				<div class="team finals{{this.winSemiFinal}} team{{@index}}">
					<img class="countryFlag" src="{{ ../../img_path }}flags/{{this.flagImage}}"/>
					<div class="teamInfo">
						<div class="teamName">{{this.teamName}}</div>
						<div class="{{this.winner}}"></div>
						<div class="clearboth"></div>
						<div class="teamPot">{{this.quarterFinalStatus}}</div>
					</div>
					<div class="clearboth"></div>
				</div>
				<div class="teamSeparator{{@index}}"></div>
				{{/each}}
			</div>
		{{/each}}
		<div class="clearboth"></div>
	</div>
</div>

<div class="finals final">
	<div class="title">
		<h4>Final</h4>
	</div>
	<div class="matches">
		{{#each final}}
			<div class="match">
				{{#each this}}
				<div class="team finals{{this.winFinal}} team{{@index}}">
					<img class="countryFlag" src="{{ ../../img_path }}flags/{{this.flagImage}}"/>
					<div class="teamInfo">
						<div class="teamName">{{this.teamName}}</div>
						<div class="championship{{this.winFinal}}"></div>
						<div class="clearboth"></div>
					</div>
					<div class="clearboth"></div>
				</div>
				<div class="teamSeparator{{@index}}"></div>
				{{/each}}
			</div>
		{{/each}}
		<div class="clearboth"></div>
	</div>
</div>


